<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Writer</th>
      <th>Price</th>
      <th>Company</th>
      <th>Bookimage</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.writer %></td>
        <td><%= book.price %></td>
        <td><%= book.company %></td>
        <!-- <td><img src="<%= book.cover_url %>"></td> -->
        <td><%= image_tag(book.cover_url) %></td>
        <td><%= book.date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

